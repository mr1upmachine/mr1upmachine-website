---
interface Props {
  date: Date;
  itemprop?: string; // Optional for schema.org compatibility
}

const { date, itemprop } = Astro.props;
---

<time datetime={date.toISOString()} itemprop={itemprop}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
